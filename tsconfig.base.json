{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "isolatedModules": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": "./src/main",
    "skipLibCheck": true,
    "strict": true,
    "stripInternal": true,
    "target": "es2015",
    "verbatimModuleSyntax": true
  }
}
